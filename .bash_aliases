alias py='python3'

# Sort by filesize
alias lt='ls -la --human-readable --size -1 -S --classify'

# Create and activate a Python virtual environment
alias ve='python3 -m venv ./venv'
alias va='source ./venv/bin/activate'

# cd ..n
alias ..="cd .."
alias ...="cd ../.."
alias ....="cd ../../.."
alias .....="cd ../../../.."
alias ......="cd ../../../../.."
